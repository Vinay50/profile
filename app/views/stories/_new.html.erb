<%= form_for @story,validate: true do |f|%>
  <div class ="form-group">
    <%= f.text_field :title, :class => "form-control", :placeholder => "Add Title" %>
  </div>
  <div class ="form-group">
    <%= f.cktext_area :content, :class => "form-control", :placeholder => "Add Content", rows: 15, cols: 25 %>
  </div>
   <div class ="form-group">
    <%= f.text_field :all_tags, :class => "form-control", :placeholder => "Add Tag(s)" %>
  </div>
  <%= f.submit "Submit", class: 'btn btn-primary pull-right' %>
<% end %>
