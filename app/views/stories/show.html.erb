<div class="container">
  <div class="row">
    <div class="col-lg-9">
		  <%= @story.title %>
			<%= @story.content %>
			<h3>Comments</h3>

		  <%= form_for [@story, Comment.new] do |f| %>
		  	<%= f.text_area :body, :class => "form-control", :placeholder => "Add Comment" %>
		  <%= f.submit "Submit" %>
		  <% end %>
			<ul>
				<%= render(partial: 'comments/comment', collection: @story.comments) %>
			</ul>
		</div>
	</div>
</div>

